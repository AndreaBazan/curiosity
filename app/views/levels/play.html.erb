<hr>

<section class="game-box">

  <table class="robot-board">
    <% @board.each do |row| %>
    <tr>
      <% row.each do |square| %>
      <td class='<%= square %>'>
        <% if square == 'robot' %>
        <div class="robot-piece">
          <%= render 'components/curioso' %>
        </div>
        <% end %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </table>
</section>
