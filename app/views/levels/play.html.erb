<h1 class="text-center"></h1>
<hr>

<div class="game-flex">
  <section class="game-box">
    <table class="robot-board">
      <% @board.each do |row| %>
      <tr>
        <% row.each do |square| %>
        <td class='<%= square %>'>
          <% if square == 'robot' %>
          <div class="robot-piece">
            <%= render 'components/curioso' %>
          </div>
          <% end %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </section>
  <section class="controls">
    <h3 class="text-center" style="color: white" >Controles</h3>
    <div class="buttons">
      <div class="left">
        <button class="loading-frame race-btns" id="left" data-input="left-input">
          <ul  class="arrows">
            <% (1..8).each do |i|  %>
            <li  class="circle" ></li>
            <% end %>
          </ul>
        </button>
        <input type="number" id="left-input" class="control-input" value="1">
      </div>


<section class="controls">
  <h3 class="text-center" style="color: white" >Controles</h3>
  <div class="buttons">
    <div class="left">
      <button class="loading-frame race-btns" id="left" data-input="left-input">
       <i class="fa fa-undo left-turn"></i>
      </button>
      <input type="number" id="left-input" class="control-input" value="1">
    </div>

    <div class="up">
      <button class="loading-frame race-btns" id="up" data-input="up-input">
        <ul class="arrows" >
          <% (1..8).each do |i|  %>
          <li  class="circle" ></li>
          <% end %>
        </ul>
      </button>
      <input type="number" id="up-input" class="control-input" value="1">
    </div>

    <div class="right">
      <button class="loading-frame race-btns " id="right" data-input="right-input">
      <i class="fa fa-undo right-turn"></i>
      </button>
      <input type="number" id="right-input" class="control-input" value="1">
    </div>
      <div>
        <button id="clear-queue" class="play-moves"><i class="fa fa-times"></i></button>
        <button id="play-queue" class="play-moves"><i class="fa fa-play"></i></button>
      </div>
    </div>
    <section>
      <ul class="list-unstyled" id="queue-interface"></ul>
    </section>
  </section>
</div>


<%= form_for [@level, @play_session], remote: true do |form| %>
  <%= form.hidden_field :actions %>
<% end %>

<% content_for :js_pack do %>
  <%= javascript_pack_tag 'game' %>
<% end %>
