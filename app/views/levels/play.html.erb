<section class="controls">
  <h3 class="text-center" style="color: white" >Controles</h3>
  <div class="buttons">
    <div class="left">
      <button class="loading-frame race-btns" id="left" data-input="left-input">
        <ul  class="arrows">
          <% (1..8).each do |i|  %>
          <li  class="circle" ></li>
          <% end %>
        </ul>
      </button>
      <input type="number" id="left-input" class="control-input" value="1">
    </div>

    <div class="right">
      <button class="loading-frame race-btns" id="right" data-input="right-input">
        <ul class="arrows" >
          <% (1..8).each do |i|  %>
          <li  class="circle" ></li>
          <% end %>
        </ul>
      </button>
      <input type="number" id="right-input" class="control-input" value="1">
    </div>

    <div class="down">
      <button class="loading-frame race-btns" id="down" data-input="down-input">
        <ul  class="arrows">
          <% (1..8).each do |i|  %>
          <li  class="circle" ></li>
          <% end %>
        </ul>
      </button>
      <input type="number" id="down-input" class="control-input" value="1">
    </div>

    <div class="up">
      <button class="loading-frame race-btns" id="up" data-input="up-input">
        <ul class="arrows" >
          <% (1..8).each do |i|  %>
          <li  class="circle" ></li>
          <% end %>
        </ul>
      </button>
      <input type="number" id="up-input" class="control-input" value="1">
    </div>

    <div>
      <button class="turn-left"> <i class="fa fa-undo "></i></button>
    </div>

    <div>
      <button class="turn-right"> <i class="fa fa-undo btn-submit"></i></button>
    </div>

    <div>
      <button class="play-moves"> <i class="fa fa-play btn-submit"></i></button>
    </div>


  </div>
</section>
<%= javascript_pack_tag 'game' %>
