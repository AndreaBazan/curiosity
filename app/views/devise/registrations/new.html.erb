<div class="signup-container text-center">
  <h2>¿Todavía no tienes una cuenta?<br>Empieza la aventura!</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


  <div class="field">
      <%= f.label :name, 'Nombre' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "Name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, 'Contraseña' %>
      <% if @minimum_password_length %>
      <small><em>(min <%= @minimum_password_length %> caracteres)</em></small>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Confirma tu contraseña' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Crea una cuenta" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>